<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Multiplication_Factorial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/custom_design_three"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কত ঘরের নামতা দেখতে চান?"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textColor="@color/teal_700"
            android:gravity="center"
            android:background="@drawable/custom_design"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <soup.neumorphism.NeumorphButton
                android:id="@+id/bSubmit"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:text="SUBMIT"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#00BCD4"
                app:neumorph_shadowColorDark="#00BCD4"
                >

            </soup.neumorphism.NeumorphButton>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neumorph_shapeType="basin"
                app:neumorph_shadowColorDark="#05C8A1"
                >

                <EditText
                    android:id="@+id/edInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="input number"
                    android:background="@null"
                    android:layout_margin="5dp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="basin"
            android:layout_gravity="center"
            app:neumorph_shadowColorDark="#BCFB0303"
            >

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="Result"
                android:textSize="21sp"
                android:background="@null"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FF5722"
                android:padding="5dp"
                />
        </soup.neumorphism.NeumorphCardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কোন সংখ্যার ফ্যাক্টোরিয়াল দেখতে চান?"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#009688"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/custom_design_two"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ফ্যাক্টোরিয়াল হচ্ছেঃ ১ থেকে ওই সংখ্যার গুণফল।"
            android:gravity="center"
            android:textColor="#9C27B0"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_design"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <soup.neumorphism.NeumorphButton
                android:id="@+id/bSubmit2"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:text="SUBMIT"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#00BCD4"
                app:neumorph_shadowColorDark="#00BCD4"
                >

            </soup.neumorphism.NeumorphButton>

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:neumorph_shapeType="basin"
                app:neumorph_shadowColorDark="#05C8A1"
                >

                <EditText
                    android:id="@+id/edInput2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="input number"
                    android:background="@null"
                    android:layout_margin="5dp"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:neumorph_shapeType="basin"
            android:layout_gravity="center"
            app:neumorph_shadowColorDark="#BCFB0303"
            >

            <TextView
                android:id="@+id/tvResult2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Result"
                android:textSize="21sp"
                android:background="@null"
                android:layout_margin="5dp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="#FF5722"
                android:padding="5dp"
                />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/bReset"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="RESET"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#E91E63"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:neumorph_shadowColorDark="#E91E63"
            >

        </soup.neumorphism.NeumorphButton>




    </LinearLayout>

</ScrollView>