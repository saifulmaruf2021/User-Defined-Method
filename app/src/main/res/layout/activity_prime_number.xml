<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimeNumber"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custom_design_three"
        android:padding="10dp"
        android:layout_margin="5dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="কোন সংখ্যা প্রাইম নাম্বার কি না দেখতে চান?"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="3dp"
        android:padding="7dp"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:background="@drawable/custom_design"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <soup.neumorphism.NeumorphButton
            android:id="@+id/bSubmit"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="SUBMIT"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#00BCD4"
            app:neumorph_shadowColorDark="#00BCD4"
            >

        </soup.neumorphism.NeumorphButton>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="basin"
            app:neumorph_shadowColorDark="#05C8A1"
            >

            <EditText
                android:id="@+id/edInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="input number"
                android:background="@null"
                android:layout_margin="5dp"
                android:textStyle="italic"
                android:gravity="center"
                android:textColor="@color/black"
                />
        </soup.neumorphism.NeumorphCardView>

    </LinearLayout>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neumorph_shapeType="basin"
        android:layout_gravity="center"
        app:neumorph_shadowColorDark="#BCFB0303"
        >

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Result"
            android:textSize="21sp"
            android:background="@null"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FF5722"
            android:padding="7dp"
            />
    </soup.neumorphism.NeumorphCardView>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="কত নং থেকে কত নং এর প্রাইম সংখ্যা এবং সর্বমোট দেখতে চান?"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="3dp"
        android:padding="7dp"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:background="@drawable/custom_design"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3"
        >

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neumorph_shapeType="basin"
        app:neumorph_shadowColorDark="#FF9800"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/edNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="number"
            android:layout_margin="5dp"
            android:background="@null"
            android:textStyle="italic"
            android:gravity="center"
            />
    </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="basin"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="to"
                android:textSize="22sp"
                android:background="@null"
                android:textStyle="italic"
                android:gravity="center"
                />
        </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:neumorph_shapeType="basin"
        app:neumorph_shadowColorDark="#FF9800"
        android:layout_weight="1"
        >

        <EditText
            android:id="@+id/edNumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="number"
            android:background="@null"
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:gravity="center"
            />
    </soup.neumorphism.NeumorphCardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <soup.neumorphism.NeumorphButton
            android:id="@+id/bSubmit2"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="SUBMIT"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#00BCD4"
            app:neumorph_shadowColorDark="#00BCD4"
            >

        </soup.neumorphism.NeumorphButton>

        <soup.neumorphism.NeumorphCardView
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="basin"
            app:neumorph_shadowColorDark="#05C8A1"
            >

            <EditText
                android:id="@+id/tvResult2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@null"
                android:gravity="center"
                android:hint="Result"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                android:textColor="#0A9A0A"
                android:padding="5dp"
                />
        </soup.neumorphism.NeumorphCardView>

    </LinearLayout>

    <soup.neumorphism.NeumorphCardView
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:neumorph_shapeType="basin"
        android:layout_gravity="center"
        app:neumorph_shadowColorDark="#BCFB0303"
        >

        <TextView
            android:id="@+id/edSum"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Sum="
            android:textSize="21sp"
            android:background="@null"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FF5722"
            android:padding="7dp"
            />
    </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/bReset"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:text="RESET"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#E91E63"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:neumorph_shadowColorDark="#B30C25"
            >

        </soup.neumorphism.NeumorphButton>


    </LinearLayout>
</ScrollView>